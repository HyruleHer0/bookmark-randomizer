{
    "name": "Bookmarks Randomizer",
    "description": "A browser action that allows for selection of bookmark folders to pick a random page from.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
      "bookmarks", "storage"
    ],
    "action": {
      "default_title": "Bookmarks Randomizer",
      "default_popup": "popup.html",
      "default_icon": {
        "16": "/icons/bookmark16.png",
        "32": "/icons/bookmark32.png",
        "128": "/icons/bookmark128.png"
      }      
    },
    "icons": {
        "16": "/icons/bookmark16.png",
        "32": "/icons/bookmark32.png",
        "128": "/icons/bookmark128.png"
      }  
  }
  