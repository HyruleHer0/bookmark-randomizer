{
    "name": "Bookmarks Randomizer",
    "description": "A browser action that allows for selection of bookmark folders to pick a random page from.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
      "bookmarks"
    ],
    "action": {
      "default_title": "Bookmarks Randomizer",
      "default_popup": "popup.html",
      "default_icon": {
        "16": "/icons/icon16.jpg",
        "32": "/icons/icon32.jpg",
        "48": "/icons/icon48.jpg",
        "128": "/icons/icon128.jpg"
      }      
    },
    "icons": {
        "16": "/icons/icon16.jpg",
        "32": "/icons/icon32.jpg",
        "48": "/icons/icon48.jpg",
        "128": "/icons/icon128.jpg"
      }  
  }
  